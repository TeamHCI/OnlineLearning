<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/activity_question_gradient"
    tools:context=".activity.MultipleChoiceActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarTrueFalse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:text="﻿Câu 1: Tìm nghiệm của phương trình sau
a2 + 2ab +c = 0"
                android:textSize="22dp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/txtA"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:text="A. 3"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:textSize="23dp"/>

            <TextView
                android:id="@+id/txtB"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:text="B. 4"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:textSize="23dp"/>

            <TextView
                android:id="@+id/txtC"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:text="C. 5"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:textSize="23dp"/>

            <TextView
                android:id="@+id/txtD"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:text="D. 6"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:textSize="23dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#b400ff"
            android:text="SUBMIT"
            android:textColor="#ffffff"
            android:textSize="25dp"/>
    </LinearLayout>
</LinearLayout>